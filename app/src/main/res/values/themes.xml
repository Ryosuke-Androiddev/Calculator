<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/medium_black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ToggleButtonColor" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/sort_toggle_button_bg</item>
        <item name="strokeColor">@color/medium_black</item>
    </style>

    <style name="PopUpWindowConfirmButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">@color/pop_up_black</item>
        <item name="strokeColor">@color/pop_up_black</item>
    </style>

    <style name="TitleTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/title_input_text_stroke_color</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/title_input_text_stroke_color</item>
    </style>

    <style name="FormulaInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/formula_input_stroke_color</item>
        <item name="boxStrokeWidth">5dp</item>
        <item name="hintTextColor">@color/formula_input_stroke_color</item>
    </style>

    <style name="CustomCircleButtonShape" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/white</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="iconTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>